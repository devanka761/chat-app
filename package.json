{
  "name": "mondin",
  "version": "3.0.10",
  "description": "Chat App Written in TypeScript with Responsive Design",
  "main": "./dist/bundle/backend/server.js",
  "scripts": {
    "start": "node .",
    "dev": "nodemon",
    "dev:start": "nodemon",
    "build": "echo Bundling Frontend && webpack --config webpack.prod.cjs && echo Frontend Done && node ./src/backend/swClient.cjs && echo Compiling Backend && rm -rf ./dist/bundle && tsgo -p . --extendedDiagnostics && echo Backend Done && echo Finished",
    "client:build": "node ./src/backend/swClient.cjs && webpack --config webpack.prod.cjs",
    "dev:build": "rm -rf ./public/bundle && webpack --config webpack.dev.cjs",
    "server:build": "rm -rf ./dist/bundle && tsgo -p . --extendedDiagnostics",
    "dbclear": "node ./dist/bundle/backend/clearDB.js",
    "dev:dbclear": "tsx ./src/backend/clearDB.ts",
    "format": "prettier --write .",
    "check": "prettier --check .",
    "type-check": "tsgo -p . --pretty --noEmit",
    "lint": "eslint --ext ts --ext tsx --ext js",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged ng lint ng test",
      "pre-push": "ng build --aot true"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devanka761/chat-app.git"
  },
  "keywords": [],
  "author": "Devanka761 <contact@devanka.id> (https://devanka.id/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devanka761/chat-app/issues"
  },
  "homepage": "https://github.com/devanka761/chat-app#readme",
  "dependencies": {
    "@google/genai": "^1.11.0",
    "dotenv": "^17.0.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "fluent-ffmpeg": "^2.1.3",
    "highlight.js": "^11.11.1",
    "marked": "^16.1.1",
    "nodemailer": "^7.0.3",
    "session-file-store": "^1.5.0",
    "web-push": "^3.6.7",
    "webrtc-adapter": "^9.0.3",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^7.0.0",
    "@types/session-file-store": "^1.2.5",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "^7.0.0-dev.20250814.1",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "raw-loader": "^4.0.2",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}

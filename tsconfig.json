{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": [
      "./src/server/types/",
      "./src/client/types/",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist/bundle",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src/server/**/*"],
  "exclude": ["./node_modules/*", "./dist/**/*", "./public/**/*"]
}

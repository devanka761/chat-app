{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./src/backend/types",
      "./src/frontend/types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/bundle",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules/*", "dist/**/*", "public/**/*"]
}
